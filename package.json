{
  "name": "flatirons-cypress",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "cypress:runner": "cypress open --e2e --browser chrome",
    "cypress:execution": "cypress run --spec cypress/e2e/features/*",
    "cypress:execution-tags": "cypress run --env tags=@mobile",
    "cypress:execution-allure": "cypress run --env allure=true",
    "allure:clear": "rmdir /s /q allure-results allure-report cypress\\screenshots || exit 0",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:history": "move /Y allure-report\\history allure-results\\history && rmdir /s /q allure-report || exit 0"
  },
  "keywords": [
    "cypress"
  ],
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^23.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.1.5",
    "@shelex/cypress-allure-plugin": "^2.34.0",
    "allure-commandline": "^2.34.1",
    "cypress": "^12.0.2",
    "cypress-xpath": "^2.0.1",
    "esbuild": "^0.25.9"
  }
}
